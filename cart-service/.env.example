# Rails Environment
RAILS_ENV=development
PORT=3002

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/cart_service
DATABASE_POOL=5

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_CLIENT_ID=cart_service
KAFKA_GROUP_ID=cart_service_group

# Redis Configuration (for cart session)
REDIS_URL=redis://redis:6379/2

# External Services
PRODUCT_SERVICE_URL=http://product-service:4000
AUTH_SERVICE_URL=http://auth-service:3001

# Cart Configuration
CART_EXPIRY=172800 # 48 hours in seconds
MAX_ITEMS_PER_CART=50 