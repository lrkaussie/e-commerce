# Server Configuration
PORT=8000
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/payment_service
DATABASE_POOL_SIZE=5

# Kafka Configuration
KAFKA_BROKERS=kafka:29092
KAFKA_CLIENT_ID=payment_service
KAFKA_GROUP_ID=payment_service_group

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CURRENCY=usd

# External Services
CART_SERVICE_URL=http://cart-service:3002
AUTH_SERVICE_URL=http://auth-service:3001

# Monitoring
PROMETHEUS_METRICS_PATH=/metrics

# Payment Configuration
PAYMENT_TIMEOUT=900 # 15 minutes in seconds
MAX_RETRY_ATTEMPTS=3 